<h1>Eat Da Burger</h1>

<div id="burger-display">

  <div id="not-eaten">
    <h2>Burgers that have not been devoured</h2>
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Devour</button>
            </form>

            
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <img id="pic" src="http://www.howamericaburgers.com/assets/img/common/burgers-large.png">

  <div id="eaten">
    <h2>Burgers that have been devoured</h2>
    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li>
            {{this.burger_name}}
            
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div id="add-burger">
  <div id="input">
    <h2>Add a Burger:</h2>
    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">
        <label for="ca"><strong>Burger Name:</strong></label>
        <input type="text" id="ca" name="burger_name">
      </div>

      <button id="add-burger-button" type="submit">Add Burger</button>
    </form>
  </div>
</div>